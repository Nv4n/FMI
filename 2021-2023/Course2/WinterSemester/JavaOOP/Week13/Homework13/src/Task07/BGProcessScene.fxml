<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefWidth="396.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Task07.Controller">
    <top>
        <HBox alignment="CENTER" spacing="5.0">
            <Label>File Transfer:</Label>
            <ProgressBar fx:id="barPgr" progress="0">
            </ProgressBar>
            <ProgressIndicator fx:id="indicatorPgr" progress="0.0" />
            <opaqueInsets>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </opaqueInsets>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>

    </top>
    <bottom>
        <HBox alignment="CENTER" spacing="5.0">
            <Button fx:id="startBtn" onAction="#startProcess">Start</Button>
            <Button fx:id="cancelBtn" disable="true" onAction="#cancelProcess" wrapText="true">Cancel</Button>
            <TextArea fx:id="txtArea" editable="false" prefHeight="211.0" prefWidth="248.0">
                <HBox.margin>
                    <Insets />
                </HBox.margin>
            </TextArea>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </HBox>
    </bottom>
    <opaqueInsets>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </opaqueInsets>

</BorderPane>
